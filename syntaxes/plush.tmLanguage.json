{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Plush",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.plush",
					"match": "//.*$"
				},
				{
					"name": "comment.block.plush",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.plush",
				"match": "\\b(if|while|for|return|loop)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.plush",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.plush",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pls"
}