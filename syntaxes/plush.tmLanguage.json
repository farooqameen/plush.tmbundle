{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Plush",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#class"
        },
        {
            "include": "#constructor"
        },
        {
            "include": "#builtin-functions"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#host-functions"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#punctuation"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-dash.plush",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.plush",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.plush",
                    "match": "\\b(if|while|for|return|loop)\\b"
                },
                {
                    "match": "\\b(fun)\\s+([A-Za-z_][A-Za-z0-9_]*)(?=\\s*\\()",
                    "captures": {
                        "1": { "name": "storage.type.function.plush" },
                        "2": { "name": "entity.name.function.plush" }
                    }
                },
                {
                    "match": "\\b(let)\\s+(var)\\s+([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": { "name": "storage.type.plush" },
                        "2": { "name": "storage.modifier.var.plush" },
                        "3": { "name": "variable.other.declaration.plush" }
                    }
                },
                {
                    "match": "\\b(let)\\s+([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": { "name": "storage.type.plush" },
                        "2": { "name": "variable.other.declaration.plush" }
                    }
                }
            ]
        },
        "host-functions": {
            "patterns": [
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(time_current_ms)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(print|println|readln)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(actor_id|actor_parent|actor_sleep|actor_spawn|actor_join|actor_send|actor_recv|actor_poll)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(window_create|window_draw_frame)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(exit)\\s*\\("
                }
            ]
        },
        "class": {
            "patterns": [
                {
                    "name": "meta.class.plush",
                    "begin": "\\b(class)\\s+([A-Z][A-Za-z0-9_]*)\\s*\\{",
                    "beginCaptures": {
                        "1": { "name": "storage.type.class.plush" },
                        "2": { "name": "entity.name.type.class.plush" }
                    },
                    "end": "\\}",
                    "patterns": [
                        {
                            "include": "#comments"
                        },
                        {
                            "include": "#strings"
                        },
                        {
                            "include": "#keywords"
                        },
                        {
                            "name": "meta.method.plush",
                            "begin": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
                            "beginCaptures": {
                                "1": { "name": "entity.name.function.method.plush" }
                            },
                            "end": "\\)",
                            "patterns" : [
                                {
                                    "name": "variable.language.self.plush",
                                    "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\b(?=\\s*,|\\s*\\))"
                                },
                                {
                                    "name": "punctuation.separator.parameter.plush",
                                    "match": ","
                                },
                                {
                                    "name": "variable.parameter.plush",
                                    "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\b"
                                }
                            ]
                        },
                        {
                            "name": "meta.method.body.plush",
                            "begin": "(?<=\\))\\s*\\{",
                            "end": "\\}",
                            "patterns": [
                                {
                                    "include": "#comments"
                                },
                                {
                                    "include": "#strings"
                                },
                                {
                                    "include": "#keywords"
                                },
                                {
                                    "include": "#host-functions"
                                },
                                {
                                    "include": "#punctuation"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "constructor": {
            "patterns": [
                {
                    "name": "meta.function.constructor.plush",
                    "match": "(?<!\\.)([A-Z][A-Za-z0-9_]*)\\s*(?=\\()",
                    "captures": {
                        "1": { "name": "entity.name.type.constructor.plush" }
                    }
                }
            ]
        },
        "builtin-functions": {
            "patterns": [
                {
                    "name": "meta.function.builtin.plush",
                    "match": "(?<=\\.)([a-z][a-zA-Z0-9_]*)\\s*(?=\\()",
                    "captures": {
                        "1": { "name": "entity.name.function.builtin.plush" }
                    }
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.plush",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.plush",
                    "match": "\\\\."
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.terminator.statement.plush",
                    "match": ";"
                }
            ]
        }
    },
    "scopeName": "source.psh"
}