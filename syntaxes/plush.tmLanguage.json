{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Plush",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#host-functions"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-dash.plush",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.plush",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.plush",
                    "match": "\\b(if|while|for|return|loop)\\b"
                },
                {
                    "match": "\\b(class)\\s+([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": { "name": "storage.type.class.plush" },
                        "2": { "name": "entity.name.type.class.plush" }
                    }
                },
                {
                    "match": "\\b(fun)\\s+([A-Za-z_][A-Za-z0-9_]*)(?=\\s*\\()",
                    "captures": {
                        "1": { "name": "storage.type.function.plush" },
                        "2": { "name": "entity.name.function.plush" }
                    }
                },
                {
                    "match": "\\b(let)\\s+(var)\\s+([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": { "name": "storage.type.plush" },
                        "2": { "name": "storage.modifier.var.plush" },
                        "3": { "name": "variable.other.declaration.plush" }
                    }
                },
                {
                    "match": "\\b(let)\\s+([A-Za-z_][A-Za-z0-9_]*)",
                    "captures": {
                        "1": { "name": "storage.type.plush" },
                        "2": { "name": "variable.other.declaration.plush" }
                    }
                }
            ]
        },
        "host-functions": {
            "patterns": [
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(time_current_ms)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(print|println|readln)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(actor_id|actor_parent|actor_sleep|actor_spawn|actor_join|actor_send|actor_recv|actor_poll)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(window_create|window_draw_frame)\\s*\\("
                },
                {
                    "name": "support.function.host.plush",
                    "match": "\\$\\b(exit)\\s*\\("
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.plush",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.plush",
                    "match": "\\\\."
                }
            ]
        }
    },
    "scopeName": "source.pls"
}